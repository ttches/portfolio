@import '../vars.styl';

.text-container, .project-container, .home .home-text-container, .contact-container
  margin 0 auto
  width 90%
  @media screen and (min-width: 450px)
    width 405px
  @media screen and (min-width: 899px)
    width 700px
.home-text-container
  background-color $home-text-background
  border-radius 5px
  box-shadow 0px 0px 10px 0px rgba(50, 50, 50, 0.05);
  margin 0 auto
  position relative
  text-align center
  width 80%
  p
    font-size 16px
    padding 20px
    line-height 26px
    margin-bottom 20px

.project-container, .project-container a
  text-align center
  color white
  display block

.project-container
  @media screen and (min-width: 1599px)
    width 1200px

.contact-container
  display flex
  justify-content space-around
