@import 'nib';
@import '../vars.styl';

.project-twitch
  background-color $twitch-background-color

.project-sql
  background-color $sql-background-color

.project
  display flex
  //min-height 300px
  .project-container, a
    text-align center
    color white
    display block
  h1, h2
    width 100%
    margin-bottom 25px
    padding 0px
  h1
    display block
    font-size 1.9em
    padding-top 45px
  .github-anchor
    border solid 1px white
    border-radius 5px
    margin 0 auto
    margin-bottom 45px
    padding 7px
    user-select none
    width 130px

.tablet
  align-items flex-end
  background-color #101a24
  border-radius 8px 8px 0px 0px
  box-shadow 0px 0px 10px 0px rgba(50, 50, 50, 0.5);
  display flex
  justify-content center
  width 100%
  padding 3% 3% 0px 3%
  .twitch-tablet-image
    content url(./imgs/twitch-tablet.png)
    width 100%
    height 95%
    transform translateZ(0) //Prevents blurriness on resize
  .sql-gui-tablet-image
    content url(./imgs/sql-tablet.png)
    width 100%
    transform translateZ(0) //Prevents blurriness on resize
