@import '../vars.styl';

.project-twitch
  background-color $twitch-background-color

.project-sql
  background-color $sql-background-color
  position relative
  z-index 2 // Prevents twitch from clipping

.project
  display flex
  //min-height 300px
  h1, h2
    width 100%
    margin-bottom 25px
    padding 0px
  h1
    display block
    font-family 'Cormorant', serif;
    font-size 2.2em
    font-weight 600
    padding-top 45px
    text-shadow: 1px 1px 1px rgba(0,0,0,.4);
    @media screen and (min-width: 899px)
      padding-top 60px
      font-size 2.7em
    @media screen and (min-width: 1599px)
      padding-top 90px
      font-size 3em
  h2
    @media screen and (min-width: 899px)
      font-size 1.1em
      margin-bottom 40px
      margin-top 40px
  .github-anchor
    border solid 1px white
    border-radius 5px
    margin 0 auto
    margin-bottom 45px
    padding 7px
    transition all .5s
    user-select none
    width 130px
    &:hover
      background-color rgba(255, 255, 255, 0.1)
    @media screen and (min-width: 899px)
      padding 11px
      margin-bottom 60px

.tablet
  align-items flex-end
  background-color #101a24
  border-radius 15px 15px 0px 0px
  box-shadow 0px 0px 10px 0px rgba(50, 50, 50, 0.5);
  display flex
  justify-content center
  width 100%
  padding 3% 3% 0px 3%
  .twitch-tablet-image
    content url(./imgs/twitch-tablet.png)
    width 100%
    height 95%
    transform translateZ(0) //Prevents blurriness on resize
  .sql-gui-tablet-image
    content url(./imgs/sql-tablet.png)
    width 100%
    transform translateZ(0) //Prevents blurriness on resize
