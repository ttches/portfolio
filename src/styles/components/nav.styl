@import '../vars.styl';

nav
  color black
  padding 15px
  transition all 0.5s
  width 100%
  -webkit-transform translate3d(0,0,0)
  .nav-links
    justify-content space-between
    display flex
    margin 0 auto
    width 90%
    .nav-link
      cursor pointer
      font-weight 700
      user-select none
    @media screen and (min-width: 450px)
      justify-content flex-end
      width 405px
      .nav-link
        margin-left 15px
    @media screen and (min-width: 899px)
      width 700px
      .nav-link
        margin-left 25px


.fixed-nav
  nav
    background-color $nav-background-color
    box-shadow 0px 0px 10px 0px rgba(50, 50, 50, 0.8);
    color $nav-color
    position fixed
    top 0
    width 100%
    z-index 99
    .nav-links
      @media screen and (min-width: 1599px)
        width 1200px
  .home
    padding-bottom 86px
