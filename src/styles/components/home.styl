@import 'nib';
@import '../vars.styl';

.home
  background-color $home-background
  color $home-color
  min-height 350px
  .home-padding
    padding-top 30px
  .home-img-container
    display flex
    justify-content space-between
    padding 10px 0px 10px 0px
    .home-logo
      background-repeat no-repeat
      height 60px
      width 60px
    .logo-react
      background-image url(./imgs/react-logo-color.svg)
    .logo-sass
      background-image url(./imgs/sass-logo-color.svg)
    .logo-git
      background-image url(./imgs/git-logo-color.svg)
  .home-text-container
    background-color red
    margin 0 auto
    position relative
    text-align center
    width 80%
  p
    padding 40px
